{
    "$schema": "../../schema/templateSchema.json",
    "epiHiperSchema": "https://github.com/NSSAC/EpiHiper-Schema/blob/master/schema/templateSchema.json",
    "ann:id": "NumberInitialInfections",
    "ann:label": "Initial Infections - number",
    "ann:description": "Initially infect the specified number of individuals.",
    "template": {
        "epiHiperSchema": "https://github.com/NSSAC/EpiHiper-Schema/blob/master/schema/initializationSchema.json",
        "initializations": [
            {
                "target": {
                    "elementType": "node",
                    "scope": "local"
                },
                "sampling": {
                    "type": "absolute",
                    "number": 25,
                    "sampled": {
                        "foreach": [
                            {
                                "operations": [
                                    {
                                        "target": {
                                            "node": {"property": "healthState"}
                                        },
                                        "operator": "=",
                                        "value": {"healthState": "Isymp"}
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        ]
    },
    "userInput": [
        {
            "ann:id": "NumberOfIndividuals",
            "ann:label": "Number of individuals to initially infect",
            "ann:description": "Number of individuals that will be infected at the start of the simulation",
            "value": ["/template/initializations/1/sampling/number"],
            "exceads": {
                "minValue": 0,
                "maxValue": 999,
                "sweep": true,
                "calibrate": false
            }
        }
    ],
    "requirements": [
        {
            "value": {"healthState": "Isymp"}
        }
    ],
    "exceads": {
        "requires": {
            "allOf": ["diseaseModelTemplate1.json"]
        }
    }
}