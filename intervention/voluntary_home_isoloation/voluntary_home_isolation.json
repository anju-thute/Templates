{
  "$schema": "https://raw.githubusercontent.com/NSSAC/EpiHiper-Schema/master/schema/templateSchema.json",
  "epiHiperSchema": "https://github.com/NSSAC/EpiHiper-Schema/blob/master/schema/templateSchema.json",
  "ann:id": "NewlySymptomaticIndividuals",
  "ann:label": "Newly Symptomatic Individuals",
  "ann:description": "Helper trigger for counting and tagging people entering any of the specified symptomatic states",
  "template": {
    "epiHiperSchema": "https://github.com/NSSAC/EpiHiper-Schema/blob/master/schema/interventionSchema.json",
    "traits": [
      {
        "id": "nodeTrait",
        "ann:label": "Node Trait",
        "features": [
          {
            "id": "enteredIsymp",
            "ann:label": "Entered State Isypm",
            "enums": [
              {
                "id": "true",
                "ann:label": "true"
              },
              {
                "id": "false",
                "ann:label": "false"
              }
            ],
            "default": "false"
          },
          {
            "id": "participateInHomeIsolation",
            "ann:label": "Treatment",
            "enums": [
              {
                "id": "true",
                "ann:label": "true"
              },
              {
                "id": "false",
                "ann:label": "false"
              }
            ],
            "default": "false"
          }
        ]
      }
    ],
    "sets": [
      {
        "id": "participateInHomeIsolationLocal",
        "ann:label": "All nodes which participate in voluntary home isolation.",
        "scope": "local",
        "content": {
          "elementType": "node",
          "scope": "local",
          "left": {
            "node": {
              "property": "nodeTrait",
              "feature": "participateInHomeIsolation"
            }
          },
          "operator": "==",
          "right": {
            "value": {
              "trait": "nodeTrait",
              "feature": "participateInHomeIsolation",
              "enum": "true"
            }
          }
        }
      },
      {
        "id": "participateInHomeIsolationGlobal",
        "ann:label": "All nodes which participate in voluntary home isolation.",
        "scope": "global",
        "content": {
          "elementType": "node",
          "scope": "global",
          "left": {
            "node": {
              "property": "nodeTrait",
              "feature": "participateInHomeIsolation"
            }
          },
          "operator": "==",
          "right": {
            "value": {
              "trait": "nodeTrait",
              "feature": "participateInHomeIsolation",
              "enum": "true"
            }
          }
        }
      },
      {
        "id": "workEdgesTarget",
        "scope": "local",
        "content": {
          "elementType": "edge",
          "left": {
            "edge": {
              "property": "targetActivity",
              "feature": "activityType"
            }
          },
          "operator": "==",
          "right": {
            "value": {
              "trait": "activityTrait",
              "feature": "activityType",
              "enum": "work"
            }
          }
        }
      },
      {
        "id": "workEdgesSource",
        "scope": "local",
        "content": {
          "elementType": "edge",
          "left": {
            "edge": {
              "property": "sourceActivity",
              "feature": "activityType"
            }
          },
          "operator": "==",
          "right": {
            "value": {
              "trait": "activityTrait",
              "feature": "activityType",
              "enum": "work"
            }
          }
        }
      },
      {
        "id": "targetNodeParticipateInHomeIsolation",
        "scope": "local",
        "content": {
          "operation": "intersection",
          "sets": [
            {
              "scope": "local",
              "elementType": "edge",
              "operator": "withTargetNodeIn",
              "selector": {
                "set": {"idRef": "participateInHomeIsolationLocal"}
              }
            },
            {
              "set": {"idRef": "workEdgesTarget"}
            }
          ]
        }
      },
      {
        "id": "sourceNodeParticipateInHomeIsolation",
        "scope": "local",
        "content": {
          "operation": "intersection",
          "sets": [
            {
              "elementType": "edge",
              "operator": "withSourceNodeIn",
              "selector": {
                "set": {"idRef": "participateInHomeIsolationGlobal"}
              }
            },
            {
              "set": {"idRef": "workEdgesSource"}
            }
          ]
        }
      }
    ],
    "variables": [],
    "triggers": [
      {
        "ann:id": "voluntaryHomeIsolationSelf",
        "trigger": {
          "left": {
            "sizeof": {
              "set": {"idRef": "targetNodeParticipateInHomeIsolation"}
            }
          },
          "operator": ">",
          "right": {
            "value": {"number": 0}
          }
        },
        "interventionIds": ["intervention_1"]
      },
      {
        "ann:id": "voluntaryHomeIsolationCoWorker",
        "trigger": {
          "left": {
            "sizeof": {
              "set": {"idRef": "sourceNodeParticipateInHomeIsolation"}
            }
          },
          "operator": ">",
          "right": {
            "value": {"number": 0}
          }
        },
        "interventionIds": ["intervention_2"]
      }
    ],
    "interventions": [
      {
        "$comment": "Select Participants for voluntary Home Isolation",
        "id": "intervention_0",
        "target": {
          "set": {"idRef": "triggerTemplate1_enteredIsymp"}
        },
        "sampling": {
          "type": "individual",
          "number": 30,
          "sampled": {
            "foreach": [
              {
                "delay": 0,
                "operations": [
                  {
                    "target": {
                      "node": {
                        "property": "nodeTrait",
                        "feature": "participateInHomeIsolation"
                      }
                    },
                    "operator": "=",
                    "value": {
                      "trait": "nodeTrait",
                      "feature": "participateInHomeIsolation",
                      "enum": "true"
                    }
                  }
                ]
              },
              {
                "delay": 1,
                "operations": [
                  {
                    "target": {
                      "node": {
                        "property": "nodeTrait",
                        "feature": "participateInHomeIsolation"
                      }
                    },
                    "operator": "=",
                    "value": {
                      "trait": "nodeTrait",
                      "feature": "participateInHomeIsolation",
                      "enum": "false"
                    }
                  }
                ]
              }
            ]
          }
        }
      },
      {
        "$comment": "Voluntary Home Isolation (self)",
        "id": "intervention_1",
        "target": {
          "set": {"idRef": "targetNodeParticipateInHomeIsolation"}
        },
        "foreach": [
          {
            "operations": [
              {
                "target": {
                  "edge": {"property": "weight"}
                },
                "operator": "/=",
                "value": {"number": 1000000}
              }
            ]
          },
          {
            "delay": 14,
            "operations": [
              {
                "target": {
                  "edge": {"property": "weight"}
                },
                "operator": "*=",
                "value": {"number": 1000000}
              }
            ]
          }
        ]
      },
      {
        "$comment": "Voluntary Home Isolation (co-worker)",
        "id": "intervention_2",
        "target": {
          "set": {"idRef": "sourceNodeParticipateInHomeIsolation"}
        },
        "foreach": [
          {
            "operations": [
              {
                "target": {
                  "edge": {"property": "weight"}
                },
                "operator": "/=",
                "value": {"number": 1000000}
              }
            ]
          },
          {
            "delay": 14,
            "operations": [
              {
                "target": {
                  "edge": {"property": "weight"}
                },
                "operator": "*=",
                "value": {"number": 1000000}
              }
            ]
          }
        ]
      }
    ]
  },
  "userInput": [
    {
      "ann:id": "ParticipationPercentage",
      "ann:label": "Participation Percentage",
      "ann:description": "The percent of individuals voluntary participating.",
      "value": ["/template/interventions/1/sampling/number"],
      "exceads": {
        "min": 0.0,
        "max": 100.0,
        "sweep": true,
        "calibrate": false
      }
    },
    {
      "ann:id": "DurationOfParticipation",
      "ann:label": "Duration of Participation",
      "ann:description": "The duration in days the individuals participate.",
      "value": [
        "/template/interventions/2/foreach/2/delay",
        "/template/interventions/3/foreach/2/delay"
      ],
      "exceads": {
        "min": 1,
        "max": 30,
        "sweep": true,
        "calibrate": false
      }
    }
  ],
  "requirements": [
    {
      "set": {"idRef": "triggerTemplate1_enteredIsymp"}
    }
  ]
}
