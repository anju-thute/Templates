{
  "$schema": "../../../EpiHiper-Schema/schema/templateSchema.json",
  "epiHiperSchema": "https://github.com/NSSAC/EpiHiper-Schema/blob/master/schema/templateSchema.json",
  "ann:id": "WorkClosure",
  "ann:label": "Work Closure",
  "ann:description": "Work closure for a given time which removes interactions that occur at the school",
  "template": {
    "epiHiperSchema": "https://github.com/NSSAC/EpiHiper-Schema/blob/master/schema/interventionSchema.json",
    "variables": [
      {
        "id": "workClosed",
        "ann:label": "A value indication whether workplaces have been closed",
        "scope": "global",
        "initialValue": 0
      }
    ],
    "triggers": [],
    "interventions": [
      {
        "$comment": "Work Closure (for workers)",
        "id": "intervention_1",
        "target": {
          "elementType": "edge",
          "left": {
            "edge": {
              "property": "targetActivity",
              "feature": "activityType"
            }
          },
          "operator": "==",
          "right": {
            "value": {
              "trait": "activityTrait",
              "feature": "activityType",
              "enum": "WORK"
            }
          }
        },
        "once": [
          {
            "operations": [
              {
                "target": {
                  "variable": {
                    "idRef": "schoolClosed"
                  }
                },
                "operator": "=",
                "value": {
                  "number": 1
                }
              }
            ]
          }
        ],
        "foreach": [
          {
            "operations": [
              {
                "target": {
                  "edge": {
                    "property": "active"
                  }
                },
                "operator": "=",
                "value": {
                  "boolean": false
                }
              }
            ]
          },
          {
            "delay": 14,
            "operations": [
              {
                "target": {
                  "edge": {
                    "property": "active"
                  }
                },
                "operator": "=",
                "value": {
                  "boolean": true
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "userInput": [
    {
      "ann:id": "DaysWorkClosed",
      "ann:label": "Duration of Work Closure",
      "ann:description": "Number of days the workplaces will remain closed",
      "value": [
        "/template/interventions/1/foreach/2/delay"
      ],
      "exceads": {
        "minValue": 1,
        "maxValue": 999,
        "sweep": false,
        "calibrate": false
      }
    }
  ],
  "requirements": [
    {
      "property": "targetActivity",
      "feature": "activityType"
    },
    {
      "value": {
        "trait": "activityTrait",
        "feature": "activityType",
        "enum": "SCHOOL"
      }
    }
  ],
  "exceads": {
    "requires": {
      "allOff": [
        {
          "oneOf": [
            "montgomery_county_2009.txt",
            "montgomery_county_2009.bin"
          ]
        },
        {
          "oneOf": [
            "interventionTemplate1.json",
            "interventionTemplate2.json"
          ]
        }
      ]
    }
  }
}
